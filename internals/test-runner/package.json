{
  "name": "@internals/test-runner",
  "private": true,
  "type": "module",
  "exports": {
    "./clientside": "./dist/ClientsideTestRunner.js",
    "./serverside": "./dist/ServersideTestRunner.js"
  },
  "version": "0.1.0",
  "description": "Classes for managing the test runner process, including server boot up, puppeteer, and more",
  "author": "Kevin Scott",
  "license": "MIT",
  "dependencies": {
    "@internals/common": "workspace:*",
    "@internals/http-server": "workspace:*",
    "puppeteer": "^21.1.0",
    "fs-extra": "latest"
  },
  "wireit": {
    "build": {
      "command": "shx rm -rf dist && tsc -b",
      "dependencies": [
        "../common:build",
        "../http-server:build"
      ],
      "files": [
        "src/**/*.ts",
        "!src/**/*.test.ts",
        "package.json",
        "vitest.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "test:run": {
      "command": "vitest run --config ./vite.config.ts"
    },
    "test": {
      "command": "vitest --config ./vite.config.ts"
    }
  },
  "scripts": {
    "build": "wireit",
    "test:run": "wireit",
    "test": "wireit"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "shx": "^0.3.4",
    "wireit": "latest",
    "vitest": "latest"
  }
}
