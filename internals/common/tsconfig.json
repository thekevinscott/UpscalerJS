{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "importHelpers": false,
    "module": "es2022",
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node16",
      "types": ["vitest/globals"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.ts"],
  "ts-node": {
    "esm": true
  }
}
