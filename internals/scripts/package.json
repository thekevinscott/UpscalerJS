{
  "name": "@internals/scripts",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "description": "Scripts for managing the UpscalerJS Repo",
  "exports": {
    ".": "./dist/index.js"
  },
  "author": "Kevin Scott",
  "license": "MIT",
  "dependencies": {
    "@internals/common": "workspace:*"
  },
  "scripts": {
    "write:model-docs": "wireit",
    "start:guide": "wireit",
    "update:npm-dependencies": "wireit",
    "build": "wireit",
    "test:run": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "write:model-docs": {
      "command": "node ./dist/bin/write/model-docs.js",
      "dependencies": [
        "build"
      ]
    },
    "start:guide": {
      "command": "node ./dist/bin/start/guide.js",
      "dependencies": [
        "build"
      ]
    },
    "update:npm-dependencies": {
      "command": "node ./dist/bin/update/npm-dependencies.js",
      "dependencies": [
        "build"
      ]
    },
    "build": {
      "command": "tsc -p ./tsconfig.json",
      "dependencies": [
        "../common:build"
      ],
      "files": [
        "src/**/*.ts",
        "src/**/*.mts",
        "!src/**/*.test.ts",
        "!src/**/*.test.mts",
        "package.json",
        "vite.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "test:run": {
      "command": "vitest run --config ./vite.config.ts",
      "dependencies": [
        "../common:build"
      ]
    },
    "test": {
      "command": "vitest --config ./vite.config.ts",
      "dependencies": [
        "../common:build"
      ]
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "wireit": "latest",
    "vitest": "^0.34.2"
  }
}
