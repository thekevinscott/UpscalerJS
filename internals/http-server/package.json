{
  "name": "@internals/http-server",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "description": "Class for starting up an http server",
  "exports": {
    ".": "./dist/index.js"
  },
  "author": "Kevin Scott",
  "license": "MIT",
  "dependencies": {
    "@internals/common": "workspace:*",
    "fs-extra": "^11.1.1",
    "tunnelmole": "latest"
  },
  "wireit": {
    "build": {
      "command": "tsc -p ./tsconfig.json",
      "dependencies": [
        "../common:build"
      ],
      "files": [
        "src/**/*.ts",
        "src/**/*.mts",
        "!src/**/*.test.ts",
        "!src/**/*.test.mts",
        "package.json",
        "vite.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "test:run": {
      "command": "vitest run --config ./vite.config.ts",
      "dependencies": [
        "../common:build"
      ]
    },
    "test": {
      "command": "vitest --config ./vite.config.ts",
      "dependencies": [
        "../common:build"
      ]
    }
  },
  "scripts": {
    "build": "wireit",
    "test:run": "wireit",
    "test": "wireit"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "wireit": "latest",
    "@types/localtunnel": "^2.0.2",
    "vitest": "^0.34.2"
  }
}
