{
  "compilerOptions": {
    "declaration": true,
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"]
  },
  "ts-node": {
    "esm": true
  }
}
