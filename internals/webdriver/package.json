{
  "name": "@internals/webdriver",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "description": "Wrapper for Selenium Webdriver",
  "main": "./dist/index.js",
  "exports": {
    "./options": "./browserStackOptions.json",
    ".": "./dist/index.js"
  },
  "author": "Kevin Scott",
  "license": "MIT",
  "dependencies": {
    "dotenv": "16.3.1",
    "fs-extra": "^11.1.1",
    "selenium-webdriver": "4.4.0"
  },
  "wireit": {
    "build": {
      "command": "tsc -p ./tsconfig.json",
      "dependencies": [ 
        "../common:build"
      ],
      "files": [
        "src/**/*.ts",
        "!src/**/*.test.ts",
        "package.json",
        "vitest.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "test:run": {
      "command": "vitest run --config ./vite.config.ts"
    },
    "test": {
      "command": "vitest --config ./vite.config.ts"
    }
  },
  "scripts": {
    "build": "wireit",
    "test:run": "wireit",
    "test": "wireit"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "wireit": "latest",
    "@types/selenium-webdriver": "4.1.15",
    "vitest": "^0.34.2"
  }
}
