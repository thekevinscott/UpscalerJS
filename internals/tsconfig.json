{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,

    "allowSyntheticDefaultImports": true,
  },
}
