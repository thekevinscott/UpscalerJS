{
  "name": "@internals/registry",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "description": "Class for starting up a local mock NPM registry",
  "exports": {
    ".": "./dist/index.js"
  },
  "author": "Kevin Scott",
  "license": "MIT",
  "dependencies": {
    "@internals/common": "workspace:*",
    "@internals/http-server": "workspace:*",
    "@rauschma/stringio": "^1.4.0",
    "fs-extra": "^11.1.1",
    "js-yaml": "latest",
    "node-fetch": "^3.3.2",
    "npm-registry-client": "8.6.0",
    "verdaccio": "^5.26.1"
  },
  "wireit": {
    "build": {
      "command": "shx rm -rf dist && tsc -b",
      "dependencies": [
        "../common:build",
        "../http-server:build"
      ],
      "files": [
        "src/**/*.ts",
        "!src/**/*.test.ts",
        "package.json",
        "vitest.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "test": {
      "command": "vitest"
    }
  },
  "scripts": {
    "build": "wireit",
    "test": "wireit"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "shx": "^0.3.4",
    "wireit": "latest",
    "@types/js-yaml": "latest",
    "@verdaccio/types": "12.0.0-next.0",
    "vitest": "^0.34.2"
  }
}
