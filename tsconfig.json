{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": [
      "./test/setup/vitest.d.ts",
      "vitest/globals",
    ]
  },
  "ts-node": {
    "esm": true
  }
}
