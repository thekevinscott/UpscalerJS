{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true,
    "baseUrl": "./src",
    "rootDir": "./",
    "paths": {
      "~upscaler": ["../../../packages/upscalerjs/src/types"],
    },
    // "baseUrl": "../../",
    // "paths": {
    //   "upscaler": [
    //     "./packages/upscalerjs/src/types"
    //   ],
    // }
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"],
  
  "references": [
    {
      "path": "../../packages/upscalerjs"
    }
  ]
}
