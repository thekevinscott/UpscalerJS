{
  "name": "upscaler",
  "version": "1.0.0-beta.17",
  "description": "Enhance Images with Javascript and AI. Increase resolution, retouch, denoise, and more. Open Source, Browser and Node Compatible, MIT License.",
  "exports": {
    "./node": {
      "types": "./dist/node/cjs/cjs.d.ts",
      "require": "./dist/node/cjs/cjs.js"
    },
    "./node-gpu": {
      "types": "./dist/node-gpu/cjs/cjs.d.ts",
      "require": "./dist/node-gpu/cjs/cjs.js"
    },
    ".": {
      "types": "./dist/browser/esm/esm.d.ts",
      "import": "./dist/browser/esm/esm.js"
    }
  },
  "engines": {
    "node": ">=16.0"
  },
  "module": "dist/browser/esm/esm.js",
  "types": "dist/browser/esm/esm.d.ts",
  "umd:main": "dist/browser/umd/upscaler.min.js",
  "keywords": [
    "image enhancement",
    "super resolution",
    "upscaling",
    "tensorflow.js",
    "neural network",
    "ai",
    "retouching",
    "low light",
    "deblur",
    "denoise",
    "dehaze",
    "derain",
    "esrgan",
    "maxim"
  ],
  "files": [
    ".npmrc",
    "LICENSE",
    "CHANGELOG.md",
    "dist/**/*"
  ],
  "wireit": {
    "build": {
      "command": "pnpm run build:node-gpu && pnpm run build:node && pnpm run build:browser",
      "dependencies": [
        "../core:build",
        "../../models/default-model:build"
      ],
      "files": [
        "src/**/*.ts",
        "!src/**/*.test.ts",
        "!src/**/*.generated.ts",
        "package.json",
        "vite.config.ts",
        "tsconfig.esm.json",
        "tsconfig.cjs.json",
        "tsconfig.umd.json",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "build:browser:esm": {
      "command": "tsc -p ./tsconfig.esm.json --outDir ./dist/browser/esm",
      "dependencies": [
        "scaffold:dependencies:browser"
      ],
      "files": [
        "src/**/*.ts",
        "!src/**/*.test.ts",
        "!src/**/*.node.ts",
        "!src/**/*.generated.ts",
        "package.json",
        "vite.config.ts",
        "tsconfig.esm.json",
        "tsconfig.json"
      ],
      "output": [
        "dist/browser/esm/**"
      ]
    },
    "build:browser:umd": {
      "command": "pnpm run build:browser:umd:tsc && pnpm run build:browser:umd:rollup && pnpm run build:browser:umd:uglify && rimraf ./dist/browser/umd-tmp",
      "dependencies": [
        "scaffold:dependencies:browser"
      ],
      "files": [
        "src/**/*.ts",
        "!src/**/*.test.ts",
        "!src/**/*.node.ts",
        "!src/**/*.generated.ts",
        "package.json",
        "vite.config.ts",
        "tsconfig.umd.json",
        "tsconfig.json"
      ],
      "output": [
        "dist/browser/umd/**"
      ]
    },
    "build:browser:umd:tsc": {
      "command": "tsc -p ./tsconfig.umd.json --outDir ./dist/browser/umd-tmp"
    },
    "build:browser:umd:rollup": {
      "command": "rollup -c ./rollup.config.mjs --input ./dist/browser/umd-tmp/umd.js --file ./dist/browser/umd/upscaler.js --name Upscaler --format umd"
    },
    "build:browser:umd:uglify": {
      "command": "uglifyjs ./dist/browser/umd/upscaler.js --output ./dist/browser/umd/upscaler.min.js --compress --mangle --source-map"
    },
    "build:browser": {
      "command": "pnpm run build:browser:esm && pnpm run build:browser:umd",
      "files": [
        "src/**/*.ts",
        "!src/**/*.node.ts",
        "!src/**/*.test.ts",
        "!src/**/*.generated.ts",
        "package.json",
        "vite.config.ts",
        "tsconfig.esm.json",
        "tsconfig.umd.json",
        "tsconfig.json"
      ],
      "output": [
        "dist/browser/**"
      ]
    },
    "build:node": {
      "command": "tsc -p ./tsconfig.cjs.json --outDir ./dist/node/cjs",
      "dependencies": [
        "scaffold:dependencies:node"
      ],
      "files": [
        "src/**/*.ts",
        "!src/**/*.browser.ts",
        "!src/**/*.test.ts",
        "!src/**/*.generated.ts",
        "package.json",
        "vite.config.ts",
        "tsconfig.cjs.json",
        "tsconfig.json"
      ],
      "output": [
        "dist/node/**"
      ]
    },
    "build:node-gpu": {
      "command": "tsc -p ./tsconfig.cjs.json --outDir ./dist/node-gpu/cjs",
      "dependencies": [
        "scaffold:dependencies:node-gpu"
      ],
      "files": [
        "src/**/*.ts",
        "!src/**/*.browser.ts",
        "!src/**/*.test.ts",
        "!src/**/*.generated.ts",
        "package.json",
        "vite.config.ts",
        "tsconfig.cjs.json",
        "tsconfig.json"
      ],
      "output": [
        "dist/node-gpu/**"
      ]
    },
    "scaffold:dependencies:browser": {
      "command": "ts-node ../../scripts/package-scripts/scaffold-dependencies.ts --src packages/upscalerjs --config packages/upscalerjs/scaffolder.ts browser"
    },
    "scaffold:dependencies:node": {
      "command": "ts-node ../../scripts/package-scripts/scaffold-dependencies.ts --src packages/upscalerjs --config packages/upscalerjs/scaffolder.ts node"
    },
    "scaffold:dependencies:node-gpu": {
      "command": "ts-node ../../scripts/package-scripts/scaffold-dependencies.ts --src packages/upscalerjs --config packages/upscalerjs/scaffolder.ts node-gpu"
    },
    "docs:serve": {
      "command": "docsify serve docs --port 3030"
    },
    "preversion": {
      "command": "pnpm lint"
    },
    "prepublishOnly": {
      "command": "pnpm lint && pnpm test && pnpm build"
    },
    "format": {
      "command": "echo 'Formatting code' && prettier --write \"src/**/*.ts\""
    },
    "lint": {
      "command": "pnpm lint:browser && pnpm lint:node"
    },
    "lint:fix": {
      "command": "pnpm lint:browser:fix && pnpm lint:node:fix"
    },
    "lint:browser": {
      "command": "eslint -c .eslintrc.js src --ext .ts --ignore-pattern '**/*.node.ts'",
      "dependencies": [
        "scaffold:dependencies:browser"
      ]
    },
    "lint:browser:fix": {
      "command": "eslint -c .eslintrc.js src --ext .ts --ignore-pattern '**/*.node.ts' --fix",
      "dependencies": [
        "scaffold:dependencies:browser"
      ]
    },
    "lint:node": {
      "command": "eslint -c .eslintrc.js src --ext .ts --ignore-pattern '**/*.browser.ts'",
      "dependencies": [
        "scaffold:dependencies:node"
      ]
    },
    "lint:node:fix": {
      "command": "eslint -c .eslintrc.js src --ext .ts --ignore-pattern '**/*.browser.ts' --fix",
      "dependencies": [
        "scaffold:dependencies:node"
      ]
    },
    "test:unit:browser:playwright": {
      "command": "playwright-test --config playwright.config.json",
      "dependencies": [
        "scaffold:dependencies:browser"
      ]
    },
    "test:unit:browser:vite": {
      "command": "vitest --config vite.browser.ts",
      "dependencies": [
        "scaffold:dependencies:browser"
      ]
    },
    "test:unit:node": {
      "command": "vitest --config vite.node.ts",
      "dependencies": [
        "scaffold:dependencies:node"
      ]
    },
    "validate:build": {
      "command": "pnpm --filter @upscalerjs/scripts validate:build packages/upscalerjs -c './dist/node/cjs/cjs.js' -c './dist/node/cjs/cjs.d.ts' -c './dist/node-gpu/cjs/cjs.js' -c './dist/node-gpu/cjs/cjs.d.ts' -c './dist/browser/esm/esm.js' -c './dist/browser/esm/esm.d.ts' -c './dist/browser/umd/upscaler.js' -c './dist/browser/umd/upscaler.min.js'"
    }
  },
  "scripts": {
    "build": "wireit",
    "build:browser:esm": "wireit",
    "build:browser:umd": "wireit",
    "build:browser:umd:tsc": "wireit",
    "build:browser:umd:rollup": "wireit",
    "build:browser:umd:uglify": "wireit",
    "build:browser": "wireit",
    "build:node": "wireit",
    "build:node-gpu": "wireit",
    "scaffold:dependencies:browser": "wireit",
    "scaffold:dependencies:node": "wireit",
    "docs:serve": "wireit",
    "preversion": "wireit",
    "prepublishOnly": "wireit",
    "format": "wireit",
    "lint": "wireit",
    "lint:fix": "wireit",
    "lint:browser": "wireit",
    "lint:browser:fix": "wireit",
    "lint:node": "wireit",
    "lint:node:fix": "wireit",
    "test:unit:browser:playwright": "wireit",
    "test:unit:browser:vite": "wireit",
    "test:unit:node": "wireit",
    "validate:build": "wireit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thekevinscott/UpscalerJS.git"
  },
  "author": "Kevin Scott",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thekevinscott/UpscalerJS/issues"
  },
  "homepage": "https://github.com/thekevinscott/UpscalerJS#readme",
  "peerDependencies": {
    "@tensorflow/tfjs": "~4.8.0"
  },
  "dependencies": {
    "@upscalerjs/core": "workspace:*",
    "@upscalerjs/default-model": "workspace:*",
    "wireit": "^0.14.0"
  },
  "devDependencies": {
    "@tensorflow/tfjs": "~4.8.0",
    "@tensorflow/tfjs-node": "~4.8.0",
    "@tensorflow/tfjs-node-gpu": "~4.8.0",
    "@types/jest": "^29.5.3",
    "seedrandom": "3.0.5",
    "vitest": "^0.34.5"
  }
}
