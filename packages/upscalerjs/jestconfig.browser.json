{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testEnvironment": "node",
  "setupFiles": ["./jest.setup.ts", "jest-canvas-mock"],
  "collectCoverage": true,
  "coveragePathIgnorePatterns": [
    "node_modules",
    ".generated.ts"
  ],
  "modulePathIgnorePatterns": ["node.test.ts"],
  "testRegex": "test\\.ts$",
  "moduleFileExtensions": ["js", "ts"]
}
