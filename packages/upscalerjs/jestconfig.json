{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testEnvironment": "node",
  "setupFiles": ["./jest.setup.ts", "jest-canvas-mock"],
  "collectCoverage": true,
  "coveragePathIgnorePatterns": [
    "node_modules",
    ".generated.ts"
  ],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
}
